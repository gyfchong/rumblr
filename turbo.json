{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["lint:ts", "lint:js", "lint:styles"],
      "cache": false
    },
    "lint:ts": {
      "cache": false
    },
    "lint:js": {
      "cache": false
    },
    "lint:styles": {
      "cache": false
    },
    "lint:fix": {
      "dependsOn": ["lint"],
      "cache": false
    },
    "test": {
      "dependsOn": ["build"]
    },
    "test:ci": {
      "dependsOn": ["build"],
      "cache": false
    }
  }
}
